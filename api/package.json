{
  "name": "e-semus-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose ",
    "test:watch": "jest --watch",
    "test:badges": "jest-coverage-badges --input ./coverage/coverage-summary.json --output ../.github/badges",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "types:gen": "openapi-typescript swagger.json --output ../client/web/src/app/types/api-types.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.8.2",
    "argon2": "^0.43.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "joi": "^17.13.3",
    "ms": "^2.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/argon2": "^0.14.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-badges": "^0.1.3",
    "jest-coverage-badges": "^1.1.2",
    "jest-extended": "^5.0.3",
    "jest-mock-extended": "^4.0.0-beta1",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.4.2",
    "prisma": "^6.8.2",
    "prisma-enum-generator": "^1.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "singletons/*",
      "handlers/*",
      "database/*",
      "main.ts",
      "app.module.ts",
      "__mock__/*",
      "scripts/*",
      "src/dtos",
      "src/app.service.ts",
      "src/decorators"
    ],
    "testEnvironment": "node",
    "clearMocks": true,
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/__mock__/prisma-singleton.ts",
      "jest-extended/all"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1",
      "^prisma/(.*)$": "<rootDir>/../prisma/$1",
      "^generated/prisma$": "<rootDir>/../generated/prisma"
    }
  }
}